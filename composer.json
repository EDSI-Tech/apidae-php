{
    "name": "apidae-tourisme/apidae-php",
    "description": "Apidae API official PHP Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Apidae Tourisme",
            "email": "hotline.dev@apidae-tourisme.com"
        },
        {
            "name": "Pierre Granger",
            "email": "pierre@pierre-granger.fr"
        },
        {
            "name": "JoliCode",
            "email": "coucou@jolicode.com"
        }
    ],
    "repositories": {
        "flat-ui": {
            "type": "package",
            "package": {
                "name": "designmodo/flat-ui",
                "version": "1.3.0",
                "source": {
                    "url": "https://github.com/designmodo/Flat-UI",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    },
    "require": {
        "guzzlehttp/guzzle-services": "^1.3",
        "symfony/finder": "^5.4.0",
        "designmodo/flat-ui": "*",
        "justinrainbow/json-schema": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "ApidaePHP\\": "src/",
            "ApidaePHP\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symfony/test-pack": "^1.0",
        "symfony/framework-bundle": "^6.0"
    },
    "scripts": {
        "phpstan": [
            "php vendor/bin/phpstan analyse src --level=4"
        ],
        "tests": [
            "php vendor/bin/phpunit tests"
        ],
        "schemaDoc": [
            "generate-schema-doc --config no_footer_show_time --config no_copy_js --config no_copy_css --config template_name=md vendor/apidae-tourisme/sit-api-v2-schemas/apiObjetsTouristiquesRequete.schema docs/schemas/md/touristicobjects.md",
            "generate-schema-doc --config no_footer_show_time --config no_copy_js --config no_copy_css --config template_name=md vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielCommunesRequete.schema docs/schemas/md/reference/city.md",
            "generate-schema-doc --config no_footer_show_time --config no_copy_js --config no_copy_css --config template_name=md vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielCriteresInternesRequete.schema docs/schemas/md/reference/internal_criteria.md",
            "generate-schema-doc --config no_footer_show_time --config no_copy_js --config no_copy_css --config template_name=md vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielElementsReferenceRequete.schema docs/schemas/md/reference/criteria.md",
            "generate-schema-doc --config no_footer_show_time --config no_copy_js --config no_copy_css --config template_name=md vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielSelectionsRequete.schema docs/schemas/md/reference/selections.md",
            "generate-schema-doc --config no_footer_show_time --config expand_buttons vendor/apidae-tourisme/sit-api-v2-schemas/apiObjetsTouristiquesRequete.schema docs/schemas/html/touristicobjects.html",
            "generate-schema-doc --config no_footer_show_time --config expand_buttons vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielCommunesRequete.schema docs/schemas/html/reference/city.html",
            "generate-schema-doc --config no_footer_show_time --config expand_buttons vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielCriteresInternesRequete.schema docs/schemas/html/reference/internal_criteria.html",
            "generate-schema-doc --config no_footer_show_time --config expand_buttons vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielElementsReferenceRequete.schema docs/schemas/html/reference/criteria.html",
            "generate-schema-doc --config no_footer_show_time --config expand_buttons vendor/apidae-tourisme/sit-api-v2-schemas/apiReferentielSelectionsRequete.schema docs/schemas/html/reference/selections.html"
        ],
        "phpDoc": [
            "phpDocumentor -d src/Client.php -t docs/api"
        ]
    },
    "archive": {
        "exclude": [
            "/docs/api"
        ]
    }
}